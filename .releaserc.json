{
  "tagFormat": "v${version}",
  "plugins": [
    ["@semantic-release/commit-analyzer", { "preset": "angular" }],
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", { "preset": "angular" }],
    ["@semantic-release/npm", { "npmPublish": false, "pkgRoot": "Assets/XiUnityTools" }],
    ["@semantic-release/git", {
      "assets": ["Assets/XiUnityTools/package.json", "CHANGELOG.md"],
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
    }],
    ["@semantic-release/github", {
      "assets": [
        {"path": "XiUnityTools.unitypackage", "label": "XiUnityTools v${nextRelease.version}"}
      ]
    }]
  ]
}
